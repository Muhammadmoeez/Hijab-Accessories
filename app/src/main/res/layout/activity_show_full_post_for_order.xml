<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".ShowFullPostForOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@color/editTextBG"
       >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:background="@color/editTextBG"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/showFullImageView"
            android:layout_width="match_parent"
            android:layout_height="140dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: "
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/showFullProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3Pice Sout "
            android:gravity="right"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/showFullProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category "
            android:gravity="right"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub-Category: "
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/showFullProductSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Category "
            android:gravity="right"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/showFullProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:gravity="right"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Availability: "
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/showFullProductAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            android:gravity="right"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/showFullProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:gravity="left"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="2"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/productOrderItemNumbers"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/orderNumberOfItems"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:maxLength="15"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textColorHint="@color/textColorOnWhiteBackGround"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"
            />


        <EditText
            android:id="@+id/productOrderMemberName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/orderMemberName"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:maxLength="15"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textColorHint="@color/textColorOnWhiteBackGround"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"
            />


        <EditText
            android:id="@+id/productOrderMemberNumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/orderMemberNumber"
            android:paddingLeft="10dp"
            android:inputType="phone"
            android:maxLength="15"
            android:textColor="@color/textColorOnWhiteBackGround"
            android:textColorHint="@color/textColorOnWhiteBackGround"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"
            />
        <Button
            android:id="@+id/productOrderBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/orderBtn"
            android:background="@drawable/btn_add_product"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>