<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:background="@color/editTextBG">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/adminViewImageView"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@color/black"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name: "
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/adminViewProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3Pice Sout "
                android:gravity="right"
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/adminViewProductCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category "
                android:gravity="right"
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub-Category: "
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/adminViewProductSubCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Category "
                android:gravity="right"
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/adminViewProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:gravity="right"
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Availability: "
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/adminViewProductAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:gravity="right"
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/adminViewProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:gravity="left"
                android:textColor="@color/textColorOnWhiteBackGround"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>